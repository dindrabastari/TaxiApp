<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_menu"
    tools:context="com.kodemerah.android.citraclient.MenuActivity">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageButton"
        android:layout_weight="4"
        android:src="@drawable/logo_app"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Pesan Taksi"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:onClick="pesantaksiClick"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_weight="5" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="My Order"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:onClick="myorderClick"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_weight="5" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Profile"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:onClick="profileClick"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_weight="5" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Sign Out"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:onClick="signoutClick"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_weight="5" />

</LinearLayout>
